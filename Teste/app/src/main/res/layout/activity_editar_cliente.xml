<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Campos de edição -->
        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome completo"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="CPF"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/edtNome"/>

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Endereço"
            app:layout_constraintTop_toBottomOf="@+id/edtCpf"/>

        <EditText
            android:id="@+id/edtBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Bairro"
            app:layout_constraintTop_toBottomOf="@+id/edtEndereco"/>

        <EditText
            android:id="@+id/edtCep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="CEP"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@+id/edtBairro"/>

        <EditText
            android:id="@+id/edtCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Cidade"
            app:layout_constraintTop_toBottomOf="@+id/edtCep"/>

        <EditText
            android:id="@+id/edtTelefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Telefone principal"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/edtCidade"/>

        <EditText
            android:id="@+id/edtTelefone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Telefone secundário"
            android:inputType="phone"
            app:layout_constraintTop_toBottomOf="@+id/edtTelefone"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@+id/edtTelefone2"/>

        <!-- Botões -->
        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Salvar Alterações"
            app:layout_constraintTop_toBottomOf="@+id/edtEmail"/>

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cancelar"
            app:layout_constraintTop_toBottomOf="@+id/btnSalvar"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>